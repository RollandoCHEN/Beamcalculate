<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXSlider?>
<ScrollPane stylesheets="@../css/moment_page.css"
            xmlns="http://javafx.com/javafx/8.0.141"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beamcalculate.controllers.MomentPageController">
   <AnchorPane fx:id="momentPageAnchorPane" minHeight="760" minWidth="1600" prefHeight="760.0" prefWidth="1600.0">
      <BorderPane fx:id="borderPaneContainer"
                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <GridPane BorderPane.alignment="CENTER">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0"/>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0"/>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0"/>
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               </rowConstraints>
               <padding>
                  <Insets bottom="20.0"/>
               </padding>
               <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                  <Label text="%label.numberOfSections"/>
                  <Spinner fx:id="totalNumOnSpanSpinner" editable="true" prefWidth="70.0"
                           min="10" max="40" initialValue="10" amountToStepBy="1"/>
               </HBox>
               <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0"
                     GridPane.columnIndex="1">
                  <HBox fx:id="methodsCheckHBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
                        spacing="15.0">
                  </HBox>
                  <Label fx:id="conditionInfoLabel" styleClass="clickable"
                         text="%info.title.methodConditions"/>
               </VBox>
               <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="5.0"
                     GridPane.columnIndex="2">
                  <JFXCheckBox fx:id="redistributionCheck" visible="false" text="%label.redistribution"/>
                  <JFXButton fx:id="configurationButton" styleClass="button-config"
                             visible="false" text="%button.rdsConfig"/>
               </VBox>
            </GridPane>
         </top>
         <center>
         </center>
         <bottom>
            <VBox alignment="CENTER">
               <padding>
                  <Insets top="50.0"/>
               </padding>
               <JFXSlider fx:id="mySlider"
                          showTickLabels="true" showTickMarks="true"/>
               <GridPane alignment="CENTER" hgap="15.0" maxWidth="700" vgap="15.0" BorderPane.alignment="CENTER">
                  <padding>
                     <Insets top="20.0"/>
                  </padding>
                  <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="30.0" prefWidth="100.0"/>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="70.0" prefWidth="100.0"/>
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                  </rowConstraints>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <JFXComboBox fx:id="methodsChoiceBox" prefWidth="200.0" promptText="%label.momentCalculateMethod"/>
                  </HBox>
                  <VBox alignment="CENTER" spacing="15.0" GridPane.rowIndex="1">
                     <JFXButton fx:id="rebarCalculateButton"
                                disable="true" text="%button.calculateRebar"/>
                  </VBox>
                  <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1">
                     <HBox alignment="CENTER" spacing="10.0">
                        <JFXComboBox fx:id="spanChoiceBox" prefWidth="85" promptText="%label.spanNumb"/>
                     </HBox>
                     <HBox alignment="CENTER" spacing="5">
                        <HBox fx:id="abscissaFieldHBox" alignment="CENTER" prefWidth="150">
                        </HBox>
                        <Label fx:id="abscissaLimit" text="(0 ~ 0)" style="-fx-font-weight: bold;"/>
                        <Label text="m"/>
                     </HBox>
                  </HBox>
                  <VBox spacing="15.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <JFXButton fx:id="momentCalculateButton"
                                   text="%button.calculateMoment"/>
                        <VBox alignment="CENTER_LEFT">
                           <HBox prefHeight="100.0" prefWidth="220.0">
                              <Label fx:id="minCaseMomentLabel"/>
                              <Label fx:id="minCaseMomentValue" style="-fx-font-weight: bold;"/>
                           </HBox>
                           <HBox prefHeight="100.0" prefWidth="220.0">
                              <Label fx:id="maxCaseMomentLabel"/>
                              <Label fx:id="maxCaseMomentValue" style="-fx-font-weight: bold;"/>
                           </HBox>
                        </VBox>
                     </HBox>
                  </VBox>
               </GridPane>
            </VBox>
         </bottom>
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="40.0"/>
         </padding>
      </BorderPane>
   </AnchorPane>
</ScrollPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<ScrollPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beamcalculate.controllers.MomentPageController">
   <content>
      <AnchorPane fx:id="anchorPane" minHeight="760" minWidth="1600" prefHeight="760.0" prefWidth="1600.0">
         <children>
            <BorderPane fx:id="borderPaneContainer"
                        AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                        AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <top>
                  <GridPane BorderPane.alignment="CENTER">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                           <children>
                              <Label text="%label.numberOfSections" />
                              <Spinner fx:id="spanNumSpinner" editable="true" prefWidth="70.0"
                                       min="10" max="40" initialValue="10" amountToStepBy="1"/>
                           </children>
                        </HBox>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" GridPane.columnIndex="1">
                           <children>
                              <HBox fx:id="methodsCheckHBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                                 <children>
                                 </children>
                              </HBox>
                              <Label fx:id="conditionInfoLabel" style="-fx-text-fill: black; -fx-font-style: italic;"
                                     text="%info.title.methodConditions" />
                           </children>
                        </VBox>
                        <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="5.0" GridPane.columnIndex="2">
                           <children>
                              <CheckBox fx:id="redistributionCheck" text="%label.redistribution" />
                              <Button fx:id="configurationButton" text="%button.rdsConfig" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="20.0" />
                     </padding>
                  </GridPane>
               </top>
               <center>
               </center>
               <bottom>
                  <GridPane alignment="CENTER" hgap="15.0" maxWidth="750.0" vgap="15.0" BorderPane.alignment="CENTER">
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="40.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="60.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                           <children>
                              <Label text="Méthode :" />
                              <ChoiceBox fx:id="methodsChoiceBox" prefWidth="200.0" />
                           </children>
                        </HBox>
                        <VBox alignment="CENTER" spacing="15.0" GridPane.rowIndex="1">
                           <children>
                              <Button fx:id="rebarCalculateButton"
                                      disable="true" text="%button.calculateRebar"
                                      style="-fx-font-weight:bold;"/>
                           </children>
                        </VBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1">
                           <children>
                              <HBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Label text="N° travée :" />
                                    <ChoiceBox fx:id="spanChoiceBox" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Label text="Abscisse dans la travée :" />
                                    <TextField fx:id="abscissaField" prefWidth="50.0" />
                                    <Label text="m" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                        <VBox alignment="CENTER" spacing="15.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <children>
                              <HBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Button fx:id="momentCalculateButton"
                                            text="%button.calculateMoment" />
                                    <VBox alignment="CENTER_LEFT">
                                       <children>
                                          <HBox prefHeight="100.0" prefWidth="200.0">
                                             <children>
                                                <Label text="Moment Max (Mn*m) : " />
                                                <Label fx:id="maxCaseMomentValue" text="0.0000" />
                                             </children>
                                          </HBox>
                                          <HBox prefHeight="100.0" prefWidth="200.0">
                                             <children>
                                                <Label text="Moment Min (Mn*m) :  " />
                                                <Label fx:id="minCaseMomentValue" text="0.0000" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </GridPane>
               </bottom>
               <padding>
                  <Insets bottom="30.0" left="40.0" right="40.0" top="40.0" />
               </padding>
            </BorderPane>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>

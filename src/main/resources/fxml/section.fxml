<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.shape.Rectangle?>


<?import javafx.scene.layout.StackPane?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/8.0.141"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beamcalculate.controllers.TSectionController">
   <center>
      <StackPane alignment="TOP_CENTER" >

         <Rectangle arcHeight="5.0" arcWidth="5.0"
                    fill="DODGERBLUE" stroke="BLACK" strokeType="INSIDE"
                    height="${controller.totalHeight}" width="${controller.webWidth}"
                    BorderPane.alignment="TOP_CENTER">
         </Rectangle>

         <Rectangle arcHeight="5.0" arcWidth="5.0"
                    fill="DODGERBLUE" stroke="BLACK" strokeType="INSIDE"
                    height="${controller.flangeHeight}" width="${controller.flangeWidth}"
                    BorderPane.alignment="TOP_CENTER">
         </Rectangle>

         <Rectangle arcHeight="5.0" arcWidth="5.0"
                    fill="GRAY" strokeType="INSIDE"
                    height="${controller.flangeCompHeight}" width="${controller.flangeCompWidth}"
                    BorderPane.alignment="TOP_CENTER">
         </Rectangle>

         <Rectangle arcHeight="5.0" arcWidth="5.0"
                    fill="GRAY" strokeType="INSIDE"
                    height="${controller.webCompHeight}" width="${controller.webCompWidth}"
                    BorderPane.alignment="TOP_CENTER">
         </Rectangle>

         <BorderPane.margin>
            <Insets top="50.0" />
         </BorderPane.margin>

      </StackPane>

   </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.shape.Rectangle?>


<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Circle?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            stylesheets="@../css/rebar_cases.css"
            xmlns="http://javafx.com/javafx/8.0.141"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beamcalculate.controllers.RebarCasesController">
   <top>
      <VBox alignment="CENTER">
         <padding><Insets top="30" bottom="10"/></padding>
         <Label fx:id="methodNameLabel" alignment="CENTER" styleClass="title"/>

         <HBox spacing="15" alignment="CENTER_RIGHT">
            <padding><Insets right="50"/></padding>
            <Button fx:id="calculateDetailButton" text="%button.rebarCalculateTable" onAction="#showCalculateDetail" styleClass="promptText"/>
         </HBox>
      </VBox>
   </top>

   <center>
      <GridPane alignment="CENTER">
         <padding><Insets left="30" right="30"/></padding>

         <GridPane fx:id="leftGridPane" alignment="CENTER" prefWidth="${controller.leftGridPaneWidth}"
                   GridPane.columnIndex="0" GridPane.rowIndex="0">
            <BorderPane>
               <center>
                  <VBox>
                     <HBox alignment="TOP_CENTER" spacing="5">
                        <HBox id="Compression Height" alignment="TOP_CENTER" spacing="3">

                           <Label text="${controller.compRegionHeightString}" />
                           <VBox alignment="TOP_CENTER">
                              <Line endX="5.0" startX="-5.0" />
                              <Line startY="${controller.displayedCompRegionHeight}" />
                              <Line endX="5.0" startX="-5.0" />
                           </VBox>
                        </HBox>

                        <VBox alignment="TOP_CENTER">
                           <StackPane id="Diagram" alignment="TOP_CENTER" >

                              <Rectangle fill="DODGERBLUE" stroke="BLACK" strokeType="OUTSIDE"
                                         height="${controller.displayedTotalHeight}" width="${controller.displayedWebWidth}"
                                         BorderPane.alignment="TOP_CENTER">
                              </Rectangle>

                              <Rectangle fill="DODGERBLUE" stroke="BLACK" strokeType="OUTSIDE"
                                         height="${controller.displayedFlangeHeight}" width="${controller.displayedFlangeWidth}"
                                         BorderPane.alignment="TOP_CENTER">
                              </Rectangle>

                              <Rectangle fill="GRAY" stroke="BLACK" strokeType="OUTSIDE"
                                         height="${controller.displayedFlangeCompHeight}" width="${controller.displayedFlangeCompWidth}"
                                         BorderPane.alignment="TOP_CENTER">
                              </Rectangle>

                              <Rectangle fill="GRAY" stroke="BLACK" strokeType="OUTSIDE"
                                         height="${controller.displayedWebCompHeight}" width="${controller.displayedWebCompWidth}"
                                         BorderPane.alignment="TOP_CENTER">
                              </Rectangle>

                              <HBox alignment="BOTTOM_CENTER">
                                 <padding><Insets fx:id="coverThicknessInsets" bottom="3"/></padding>
                                 <Circle fill="red" radius="${controller.rebarDiameter}"></Circle>
                              </HBox>
                           </StackPane>

                           <HBox id="Web Width" alignment="CENTER">
                              <Line endY="5.0" startY="-5.0" />
                              <VBox alignment="CENTER">
                                 <Label text="${controller.webCompWidthString}" />
                                 <Line fill="RED" startX="${controller.displayedWebCompWidth}" />
                                 <Label />
                              </VBox>
                              <Line endY="5.0" startY="-5.0" />
                           </HBox>

                           <HBox id="Flange Width" alignment="CENTER">
                              <Line endY="5.0" startY="-5.0" />
                              <VBox alignment="CENTER">
                                 <Label text="${controller.flangeWidthString}" />
                                 <Line fill="RED" startX="${controller.displayedFlangeWidth}" />
                                 <Label />
                              </VBox>
                              <Line endY="5.0" startY="-5.0" />
                           </HBox>
                        </VBox>

                        <HBox alignment="TOP_CENTER">
                           <VBox id="Flange Height" alignment="TOP_CENTER">
                              <Line endX="5.0" startX="-5.0" />
                              <HBox alignment="CENTER">
                                 <children>
                                    <Label rotate="-90.0" text="${controller.flangeHeightString}" />
                                    <Line fill="RED" startY="${controller.displayedFlangeHeight}" />
                                    <Label rotate="-90.0" text="    " />
                                 </children>
                              </HBox>
                              <Line endX="5.0" startX="-5.0" />
                           </VBox>

                           <VBox id="Total Height" alignment="TOP_CENTER">
                                 <Line endX="5.0" startX="-5.0" />
                                 <HBox alignment="CENTER">
                                    <Label rotate="-90.0" text="${controller.totalHeightString}" />
                                    <Line fill="RED" startY="${controller.displayedTotalHeight}" />
                                    <Label rotate="-90.0" text="    " />
                                 </HBox>
                                 <Line endX="5.0" startX="-5.0" />
                              </VBox>
                        </HBox>
                     </HBox>

                     <HBox alignment="CENTER_RIGHT" spacing="10.0">
                        <padding>
                           <Insets bottom="20" right="40" />
                        </padding>

                        <Rectangle fill="GREY"
                                   height="10.0" width="20.0"
                                   stroke="BLACK" strokeType="INSIDE" />
                        <Text styleClass="promptText" text="%label.compressionRegion" />
                     </HBox>
                  </VBox>
               </center>

               <bottom>
                  <StackPane>
                     <padding><Insets bottom="30"/></padding>
                     <Label fx:id="actualSectionNameLabel" alignment="CENTER" styleClass="title"/>
                  </StackPane>
               </bottom>
            </BorderPane>
         </GridPane>

         <GridPane fx:id="rightGridPane" alignment="TOP_CENTER" prefWidth="${controller.rightGridPaneWidth}"
                   GridPane.columnIndex="1" GridPane.rowIndex="0">
            <VBox spacing="20" alignment="TOP_RIGHT">
               <GridPane fx:id="spanGridPane" alignment="CENTER" hgap="20" vgap="15">

               </GridPane>
               <GridPane fx:id="supportGridPane" alignment="CENTER" hgap="20" vgap="15">

               </GridPane>
            </VBox>
         </GridPane>
      </GridPane>
   </center>

</BorderPane>
